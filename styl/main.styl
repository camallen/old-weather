html
    overflow-y: scroll

body
    display: flex
    min-height: 100vh
    flex-direction: column

img
    max-width: 100%

.navbar
    border-radius: 0

.container-fluid
    width: 100%

#site-main
    padding-bottom: 100px
    flex: 1

#site-footer
    padding-bottom: 50px

.log-container
    position: relative
    font-size: 0

.log-container .log-controls
    position: absolute
    bottom: 35px
    right: 15px

.log
    cursor: move
    background: grey
    max-width: 100%
    width: 100%
    height: 90vh

